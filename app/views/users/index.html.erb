<h2>Users</h2>
<hr>
<% @users.each do |me| %>
  <b><%= link_to me.username, user_path(me.id) %></b><br>
  <%= "#{me.first_name} #{me.last_name}" %><br>
  <% if current_user && current_user.id == me.id %>
    <%= link_to 'Edit', edit_user_path(me) %> |
    <%= link_to 'Remove', user_path(me), method: :delete %>
  <% end %>
  <hr>
<% end %>
