<% #investor investments %>

<hr>
<h3>Investments</h3>
<% #if block calling the crunchbase Api %>
<% if @news["data"]["relationships"]["investments"].nil? %>
 <p><%= puts "No investments available" %></p>
 <% else %>
   <%  @news["data"]["relationships"]["investments"]["items"].map {|x| x["invested_in"]["name"]}.uniq.each do |investment| %>
<p><%= investment %>,</p>
<% end %>
<% end %>
