<h2><%= @company.name %></h2>
<%= link_to "back", companies_path %>
  <hr>
  <p>followers <%= @company.users.count %>

  </p>
  <%= link_to image_tag( @company.logo) %>
  <!-- <p><%= @company.name %></p> -->
  <% if current_user.companies.include?(Company.find(params[:id]))  %>
    <%= button_to "unfollow", {action: "unfollow"} %>
  <% else %>
    <%= button_to "follow", {action: "follow"} %>
  <% end %>


  <p><%= @company.angel_list_id %></p>
  <p><%= @company.description %></p>
  <p><%= @company.rating %></p>
  <p><%= @company.url %></p>
  <p><%= @company.twitter_url %></p>
  <p><%= @company.address %></p>
  <p>Last Updated On: <%= @company.updated_at.strftime("%m/%d/%Y")  %></p>

  <hr>
  <p>Jobs Available</p>
  <hr>
  <% @job.each do |role| %>
  <%= link_to role["title"], @company.url %>
  <p style="text-indent: 15px;"><em><%= role["tags"].select {|x| x["tag_type"] == "SkillTag"}.map{|y| y["name"]}.join(", ") %></em></p>
  <p style="text-indent: 15px;">$<%= role["salary_min"] %> to $<%= role["salary_max"] %></p>
    <% end %>
  <hr>
  <p>News Feeed</p>
  <% if @news["data"]["relationships"]["news"].nil? %>
   <p><%= puts "No news available" %></p>
   <% else %>
     <%  @news["data"]["relationships"]["news"]["items"].each do |post| %>
  <%= link_to post["title"], post["url"] %>
  <hr>
  <% end %>
  <% end %>
